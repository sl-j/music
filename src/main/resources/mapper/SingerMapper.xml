<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lei.music.dao.SingerMapper">

    <resultMap id="BaseResultType" type="com.lei.music.bean.Singer">
        <id column="id" jdbcType="INTEGER" property="id"></id>
        <result column="name" jdbcType="VARCHAR" property="name"></result>
        <result column="sex" jdbcType="BIT" property="sex"></result>
        <result column="pic" jdbcType="VARCHAR" property="pic"></result>
        <result column="birth" jdbcType="TIMESTAMP" property="birth"></result>
        <result column="location" jdbcType="VARCHAR" property="location"></result>
        <result column="introduction" jdbcType="VARCHAR" property="introduction"></result>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,sex,pic,birth,location,introduction
    </sql>
    
<!--    添加歌手-->
    <insert id="add" parameterType="singer" >
        insert into singer 
        <trim prefix="(" suffix=")" suffixOverrides=",">
         <if test="id != null">
             id,
         </if>
            <if test="name != null">
                name,
            </if>
            <if test="sex != null">
                sex,
            </if>
            <if test="pic != null">
                pic,
            </if>
            <if test="birth != null">
                birth,
            </if>
            <if test="location != null">
                location,
            </if>
            <if test="introduction != null">
                introduction,
            </if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="name != null">
                #{name},
            </if>
            <if test="sex != null">
                #{sex},
            </if>
            <if test="pic != null">
                #{pic},
            </if>
            <if test="birth != null">
                #{birth},
            </if>
            <if test="location != null">
                #{location},
            </if>
            <if test="introduction != null">
                #{introduction},
            </if>
        </trim>
    </insert>

<!--    修改歌手-->
    <update id="update" parameterType="singer">
        update singer
        <trim prefix="set" suffixOverrides=",">
            <if test="name != null">
                name = #{name},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="pic != null">
               pic = #{pic},
            </if>
            <if test="birth != null">
               birth = #{birth},
            </if>
            <if test="location != null">
               location = #{location},
            </if>
            <if test="introduction != null">
                introduction = #{introduction},
            </if>

        </trim>
        where id = #{id}
    </update>

<!--    删除歌手-->
    <delete id="delete">
        delete from singer where id = #{id}
    </delete>

<!--    查询一个歌手-->
    <select id="queryOne" resultMap="BaseResultType">
        select
        <include refid="Base_Column_List"></include>
        from singer
        where id = #{id}
    </select>

<!--    查询所有歌手-->
    <select id="queryAll" resultMap="BaseResultType">
        select * from singer
    </select>

<!--    根据姓名模糊查询歌手-->
    <select id="queryByName" resultMap="BaseResultType">
        select * from singer
        where name like #{name}
    </select>

<!--    根据性别查询歌手-->
    <select id="queryBySex" resultMap="BaseResultType">
        select * from singer
        where sex = #{sex}
    </select>
</mapper>